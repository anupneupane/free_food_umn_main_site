
<%= semantic_form_for(@event) do |f| %>
  <%= f.input :name, :label => 'Title', :placeholder => 'Name your event' %>
  <%= f.input :description, :label => "Short description", :input_html => { :rows => 5 }, \
      :placeholder => "Brief summary of event, like what kind of free stuff there \
will be, exciting activities, etc." %>
  <table>
    <tr>
      <td class="start_date_time" colspan="3">Beginning of event</td>
      <td colspan="1">&nbsp;&nbsp;How long you expect the event to be</td>
    </tr>
    <tr>
      <td class="start_date_time">
        <%= f.input :date_string, :as => :date_picker, :label => false %>
      </td>
      <td class="start_date_time">
        <%= f.input :start_time_string, :label => false %>
      </td>
      <td class="start_date_time">
        <%= f.input :meridian_indicator, :as => :radio, :collection => ["am", "pm"], :label => false %>
      </td>
      <td>
        <%= f.input :duration, :label => false %>hours
      </td>
    </tr>
  </table>

  <br />

  <%= f.input :location, :placeholder => "optional" %>
  <%= f.input :google_maps_url, :placeholder => "optional, but potentially really useful!" %>
  <%= f.input :long_description, :input_html => { :rows => 5 }, :placeholder => "optional" %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button, :label => 'Submit Event' %>
    <%= f.action :submit, :as => :button, :label => 'Submit Event as Organization', :button_html => { name: "submit_as_organization" } %>
  <% end %>

<% end %>