

<%= semantic_form_for(@event) do |f| %>
  <%= f.input :name, :label => 'Title', :placeholder => 'Name your event' %>
  <%= f.input :description, :label => "Short description", :as => 'text', :input_html => { :rows => 5 }, \
      :placeholder => " What will show up on our homepage. Please add a brief summary, \
like location, food details, organization type, etc..." %>

  <table>
    <tr>
      <td class="start_date_time" colspan="3">Beginning of event</td>
      <td colspan="1">Duration of event</td>
    </tr>
    <tr>
      <td class="start_date_time">
        <%= f.input :date_string, :as => :date_picker, :label => false %>
      </td>
      <td class="start_date_time">
        <%= f.input :start_time_string, :label => false %>
      </td>
      <td class="start_date_time">
        <%= f.input :meridian_indicator, :as => :radio, :collection => ["am", "pm"], :label => false %>
      </td>
      <td>
        <%= f.input :duration, :label => false %>
      </td>
    </tr>
  </table>

  <br />

  <%= f.input :location, :placeholder => "optional, if you included it already in the short description" %>
  <%= f.input :google_maps_url, :placeholder => "optional, but potentially really useful!" %>
  <%= f.input :long_description, :input_html => { :rows => 5 }, :placeholder => "optional, will show up after people click on your event" %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>

<% end %>
