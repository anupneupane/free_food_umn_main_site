<h1>Listing events</h1>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Description</th>
    <th>Date</th>
    <th>End date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <% if event.approved_by_admin == false %>
      <td id="approve<%= event.id %>">
        <a href="javascript:admin_approve(<%= event.id %>)">approve</a>
      </td>
      <% else %>
        <td></td>
    <% end %>
    <td><%= event.name %></td>
    <td><%= event.description %></td>
    <td><%= event.date %></td>
    <td><%= event.end_date %></td>
    <td><%= link_to 'Show', event %>&nbsp;</td>
    <td><%= link_to 'Edit', edit_event_path(event) %>&nbsp;</td>
    <td><%= link_to 'Destroy', "/delete/event/#{event.id}", confirm: 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

<br />

